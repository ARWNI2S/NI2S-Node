<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>NI2S.Node.Runtime</PackageId>
    <Title>NI2S Node Runtime</Title>
    <Description>Core runtime library of NI2S Node that hosts and executes the narrative engine.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <RootNamespace>NI2S.Node</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Infrastructure\**" />
    <Compile Remove="Plugins\**" />
    <EmbeddedResource Remove="Infrastructure\**" />
    <EmbeddedResource Remove="Plugins\**" />
    <None Remove="Infrastructure\**" />
    <None Remove="Plugins\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="CacheKey.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
    <PackageReference Include="Microsoft.Extensions.Caching.SqlServer" />
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" />
    <PackageReference Include="NI2S.Orleans.Server" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceProjectsPath)\NI2S.Node.Core\NI2S.Node.Core.csproj" />
    <ProjectReference Include="$(SourceProjectsPath)\NI2S.Node.Network\NI2S.Node.Network.csproj" />
    <ProjectReference Include="..\NI2S.Node.Data\NI2S.Node.Data.csproj" />
  </ItemGroup>

</Project>
