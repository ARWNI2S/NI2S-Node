<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>NI2S.Node.Core</PackageId>
    <Title>NI2S Node Core Library</Title>
    <Description>Core library of NI2S Node.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <RootNamespace>NI2S.Node</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Core\Plugins\**" />
    <Compile Remove="Engine\Runtime\**" />
    <EmbeddedResource Remove="Core\Plugins\**" />
    <EmbeddedResource Remove="Engine\Runtime\**" />
    <None Remove="Core\Plugins\**" />
    <None Remove="Engine\Runtime\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Diagnostics\ErrorMessageBuilder.cs" />
    <Compile Remove="Engine\DefaultWorkContext.cs" />
    <Compile Remove="Engine\DefaultWorkContextFactory.cs" />
    <Compile Remove="Hosting\Extensions\HotReloadService.cs" />
    <Compile Remove="Hosting\Extensions\JsonOptions.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SourceProjectsPath)\Shared\CopyOnWriteDictionary.cs" Link="CopyOnWriteDictionary.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileProviders.Composite" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="NI2S.Orleans.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceProjectsPath)\NI2S.Node.Core.Abstractions\NI2S.Node.Core.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Core\Framework\" />
    <Folder Include="Data\" />
  </ItemGroup>

</Project>
