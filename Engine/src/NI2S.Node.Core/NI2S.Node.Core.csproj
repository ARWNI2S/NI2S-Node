<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>NI2S.Node.Core</PackageId>
    <Title>NI2S Node Core Library</Title>
    <Description>Core library of NI2S Node.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
    <RootNamespace>NI2S.Node</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Core\Globalization\" />
    <Folder Include="Helpers\" />
    <Folder Include="Hosting\Builder\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="NI2S.Orleans.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceProjectsPath)\NI2S.Node.Core.Abstractions\NI2S.Node.Core.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Assembly\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Assembly\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      <CustomToolNamespace>NI2S.Node.Core</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

</Project>
