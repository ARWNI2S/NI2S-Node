<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>NI2S.Node.Network</PackageId>
    <Title>NI2S Node Network Library</Title>
    <Description>Network library of NI2S Node.</Description>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Hosting\**" />
    <Compile Remove="Protocol\**" />
    <Compile Remove="Routing\**" />
    <Compile Remove="Server\**" />
    <EmbeddedResource Remove="Hosting\**" />
    <EmbeddedResource Remove="Protocol\**" />
    <EmbeddedResource Remove="Routing\**" />
    <EmbeddedResource Remove="Server\**" />
    <None Remove="Hosting\**" />
    <None Remove="Protocol\**" />
    <None Remove="Routing\**" />
    <None Remove="Server\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NI2S.SocketServer" />
    <PackageReference Include="NI2S.SocketServer.Client" />
    <PackageReference Include="NI2S.SocketServer.Udp" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceProjectsPath)\NI2S.Node.Core.Abstractions\NI2S.Node.Core.Abstractions.csproj" />
  </ItemGroup>

</Project>
