<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>NI2S.Node.Network</PackageId>
    <Title>NI2S Node Network</Title>
    <Description>NI2S Node Network Module</Description>
    <PackageTags>$(PackageTags) Module Network</PackageTags>
    <TargetFrameworks>$(DefaultTargetFrameworks)</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>NI2S.Node.Network</AssemblyName>
    <RootNamespace>NI2S.Node.Networking</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Client\Protocol\Connector\ConnectState.cs" />
    <Compile Remove="Client\Protocol\Connector\IConnector.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(SourceRoot)src\NI2S.Node.Core\NI2S.Node.Core.csproj" />
    <ProjectReference Include="$(SourceRoot)src\Modules\NI2S.Node.Network.Abstractions\NI2S.Node.Network.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Client\Resources\LocalizedStrings.Designer.cs">
      <DependentUpon>LocalizedStrings.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Client\Resources\LocalizedStrings.resx">
      <CustomToolNamespace>NI2S.Node.Resources</CustomToolNamespace>
      <LastGenOutput>LocalizedStrings.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>
